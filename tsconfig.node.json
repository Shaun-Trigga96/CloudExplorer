//tsconfig.node.json
{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "sourceMap": true // Optional: for debugging built code
    },
    "include": ["create-schema-content-only.ts", "src/**/*.ts", "scripts/**/*", "scripts/**/*.ts","backend/**/*.ts","server.ts" ],
    "exclude": ["node_modules", "dist", "src"]
  }